{
    "text": "SD-WAN site status report",
    "blocks": [
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "SD-WAN site status report:"
            }
        },
        {
            "type": "section",
            "block_id": "site_name",
